{
  "name": "pfandberater-nextjs",
  "version": "1.0.0",
  "engines": {
    "node": ">=14.15",
    "yarn": ">=1.22"
  },
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MaMin490/pfandberater-nextjs.git"
  },
  "author": "Marco Minervini",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MaMin490/pfandberater-nextjs/issues"
  },
  "homepage": "https://github.com/MaMin490/pfandberater-nextjs#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        140
      ]
    }
  },
  "jest": {
    "setupFilesAfterEnv": [
      "./setupTests.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "test": "jest",
    "test:watch": "yarn test --watch",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx src --color src/",
    "format": "prettier --write src/**/*.{ts,tsx,scss,css,json}",
    "docs": "typedoc src/"
  },
  "dependencies": {
    "@ant-design/icons": "^4.6.2",
    "@types/enzyme-to-json": "^1.5.4",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.5.0",
    "antd": "^4.13.1",
    "axios": "^0.21.1",
    "enzyme": "^3.11.0",
    "enzyme-to-json": "^3.6.1",
    "next": "^10.0.8",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-redux": "^7.2.2",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "styled-components": "^5.2.1"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^12.0.1",
    "@types/enzyme": "^3.10.8",
    "@types/facepaint": "~1.2.1",
    "@types/jest": "~26.0.15",
    "@types/node": "~12.0.0",
    "@types/react": "~17.0.0",
    "@types/react-dom": "~17.0.0",
    "@types/react-helmet": "~6.1.0",
    "@types/react-redux": "~7.1.16",
    "@types/react-router-dom": "~5.1.7",
    "@types/styled-components": "~5.1.7",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "babel-plugin-styled-components": "^1.12.0",
    "commitlint": "^12.0.1",
    "enzyme-adapter-react-17-updated": "^1.0.2",
    "eslint": "^7.22.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^1.18.2",
    "redux-devtools-extension": "^2.13.9",
    "test-js": "^0.0.4",
    "ts-jest": "^26.5.4",
    "typedoc": "~0.20.28",
    "typescript": "~4.1.2",
    "webpack": "^4.38.0"
  }
}
