{
  "name": "pfandberater-nextjs",
  "version": "1.0.0",
  "engines": {
    "node": ">=14.15",
    "yarn": ">=1.22"
  },
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MaMin490/pfandberater-nextjs.git"
  },
  "author": "Marco Minervini",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MaMin490/pfandberater-nextjs/issues"
  },
  "homepage": "https://github.com/MaMin490/pfandberater-nextjs#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        140
      ]
    }
  },
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "test:watch": "yarn test --watch",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx src --color",
    "format": "prettier --write src/**/*.{ts,tsx,scss,css,json}",
    "docs": "typedoc src/"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "next": "^10.0.8",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-redux": "^7.2.2",
    "redux": "^4.0.5",
    "redux-devtools-extension": "^2.13.9",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
        "@commitlint/config-conventional": "^12.0.0",
        "@types/facepaint": "~1.2.1",
        "@types/jest": "~26.0.15",
        "@types/node": "~12.0.0",
        "@types/react": "~17.0.0",
        "@types/react-dom": "~17.0.0",
        "@types/react-helmet": "~6.1.0",
        "@types/react-redux": "~7.1.16",
        "@types/react-router-dom": "~5.1.7",
        "@types/styled-components": "~5.1.7",
        "@typescript-eslint/eslint-plugin": "~4.15.1",
        "@typescript-eslint/parser": "~4.15.1",
        "babel-eslint": "~10.1.0",
        "commitlint": "^11.0.0",
        "eslint-config-airbnb-typescript": "~12.3.1",
        "eslint-config-prettier": "~8.0.0",
        "eslint-config-react-app": "~6.0.0",
        "eslint-import-resolver-typescript": "~2.4.0",
        "eslint-plugin-flowtype": "~5.2.2",
        "eslint-plugin-import": "~2.22.1",
        "eslint-plugin-jest": "~24.1.5",
        "eslint-plugin-jsx-a11y": "~6.4.1",
        "eslint-plugin-prettier": "~3.3.1",
        "eslint-plugin-react": "~7.22.0",
        "eslint-plugin-react-hooks": "~4.2.0",
        "eslint-webpack-plugin": "~2.5.2",
        "husky": "^5.1.1",
        "lint-staged": "^10.5.4",
        "prettier": "~2.2.1",
        "prettier-eslint": "~12.0.0",
        "prettier-eslint-cli": "~5.0.0",
        "typedoc": "~0.20.28",
        "typescript": "~4.1.2"
    }
}
